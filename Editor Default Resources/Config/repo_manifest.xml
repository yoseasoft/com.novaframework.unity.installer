<?xml version="1.0" encoding="utf-8"?>
<root>
    <!-- 环境参数设置 -->

    <set name="REPO_URL" value="https://github.com/yoseasoft"/>

    <!-- 插件包配置清单 -->

    <!-- 基础引擎库 -->
    <package name="com.yoseasoft.gooasset" displayName="GooAsset" title="Goo资产管理框架" required="true">
        <git-repository url="https://github.com/yoseasoft/GooAsset.git"/>
    </package>
    <package name="com.yoseasoft.novaframework" displayName="NovaFramework" title="Nova引擎框架" required="true">
        <git-repository url="https://github.com/yoseasoft/NovaFramework.git"/>
        <dependencies>
            <reference-package name="com.yoseasoft.gooasset"/>
            <reference-package name="com.novaframework.unity.unitask"/>
        </dependencies>
    </package>
    <package name="com.novaframework.unity.core.configure" displayName="NovaFramework.Configure" title="Nova引擎配置核心库" required="true"> 
        <git-repository url="https://github.com/yoseasoft/com.novaframework.unity.core.configure.git"/>
    </package>
    <package name="com.novaframework.unity.core.boot" displayName="NovaFramework.Boot" title="Nova引擎启动核心库" required="true">
        <git-repository url="https://github.com/yoseasoft/com.novaframework.unity.core.boot.git"/>
        <dependencies>
            <reference-package name="com.novaframework.unity.core.configure"/>
        </dependencies>
    </package>

    <!-- 第三方工具库 -->
    <package name="com.novaframework.unity.unitask" displayName="NovaFramework.UniTask" title="UniTask核心库">
        <git-repository url="https://github.com/yoseasoft/com.novaframework.unity.unitask.git"/>
    </package>
    <package name="com.novaframework.unity.litjson" displayName="NovaFramework.LitJson" title="LitJson核心库">
        <git-repository url="https://github.com/yoseasoft/com.novaframework.unity.litjson.git"/>
    </package>
    <package name="com.novaframework.unity.sharpziplib" displayName="NovaFramework.SharpZipLib" title="SharpZipLib核心库">
        <git-repository url="https://github.com/yoseasoft/com.novaframework.unity.sharpziplib.git"/>
    </package>
    <package name="com.novaframework.unity.luban" displayName="NovaFramework.Luban" title="Luban核心库">
        <git-repository url="https://github.com/yoseasoft/com.novaframework.unity.luban.git"/>
    </package>
    <package name="com.novaframework.unity.protobuf" displayName="NovaFramework.Protobuf" title="Protobuf核心库">
        <git-repository url="https://github.com/yoseasoft/com.novaframework.unity.protobuf.git"/>
        <repulsions>
            <reference-package name="com.novaframework.unity.streambuf"/>
        </repulsions>
    </package>
    <package name="com.novaframework.unity.streambuf" displayName="NovaFramework.Streambuf" title="Streambuf核心库">
        <git-repository url="https://github.com/yoseasoft/com.novaframework.unity.streambuf.git"/>
        <repulsions>
            <reference-package name="com.novaframework.unity.protobuf"/>
        </repulsions>
    </package>
    <package name="com.novaframework.unity.fairygui" displayName="NovaFramework.FairyGUI" title="FairyGUI核心库">
        <git-repository url="https://github.com/yoseasoft/com.novaframework.unity.litjson.git"/>
    </package>

    <!-- 教程实例库 -->
    <package name="com.gameframework.unity.sample"
             displayName="GameFramework.Sample"
             title="Nova教程库"
             description="针对Nova框架的特性以及调度方式，提供一些教程案例作为使用入门的参考">
        <git-repository url="https://github.com/yoseasoft/com.gameframework.unity.sample.git"/>
        <assembly-definition name="Game.Sample" tag="Compile,Tutorial"/>
    </package>

    <!-- 游戏启动器 -->
    <package name="com.gameframework.unity.launcher"
             displayName="GameFramework.Launcher"
             title="Nova启动模版"
             description="针对Nova框架提供一套默认的启动流程代码模版，可以基于这套模版定制个性化的启动流程">
        <git-repository url="https://github.com/yoseasoft/com.gameframework.unity.launcher.git"/>
        <dependencies>
            <reference-package name="com.novaframework.unity.core.configure"/>
            <reference-package name="com.novaframework.unity.sharpziplib"/>
        </dependencies>
    </package>

    <!-- 模块支持库 -->
    <package name="com.gameframework.unity.module.protocol.protobuf"
             displayName="GameFramework.Module.Protocol.Protobuf"
             title="Protobuf服务模块"
             description="提供基于Protobuf协议解析及操作码注册管理">
        <git-repository url="https://github.com/yoseasoft/com.gameframework.unity.module.protocol.protobuf.git"/>
        <assembly-definition name="Game.Module.Protocol.Protobuf"/>
        <dependencies>
            <reference-package name="com.novaframework.unity.protobuf"/>
        </dependencies>
        <repulsions>
            <reference-package name="com.gameframework.unity.module.protocol.streambuf"/>
        </repulsions>
    </package>
    <package name="com.gameframework.unity.module.protocol.streambuf"
             displayName="GameFramework.Module.Protocol.Streambuf"
             title="Streambuf服务模块"
             description="提供基于Streambuf协议解析及操作码注册管理">
        <git-repository url="https://github.com/yoseasoft/com.gameframework.unity.module.protocol.streambuf.git"/>
        <assembly-definition name="Game.Module.Protocol.Streambuf"/>
        <dependencies>
            <reference-package name="com.novaframework.unity.streambuf"/>
        </dependencies>
        <repulsions>
            <reference-package name="com.gameframework.unity.module.protocol.protobuf"/>
        </repulsions>
    </package>
    <package name="com.gameframework.unity.module.view.fairygui"
             displayName="GameFramework.Module.View.FairyGUI"
             title="FairyGUI服务模块"
             description="封装FairyGUI窗口加载及组件访问服务，对外提供UI操作的便捷访问接口">
        <git-repository url="https://github.com/yoseasoft/com.gameframework.unity.module.view.fairygui.git"/>
        <assembly-definition name="Game.Module.View.Fairygui" tag="Compile"/>
        <dependencies>
            <reference-package name="com.novaframework.unity.fairygui"/>
        </dependencies>
    </package>
    <package name="com.gameframework.unity.module.view.ugui"
             displayName="GameFramework.Module.View.UGUI"
             title="UGUI服务模块"
             description="封装UGUI窗口加载及组件访问服务，对外提供UI操作的便捷访问接口">
        <git-repository url="https://github.com/yoseasoft/com.gameframework.unity.module.view.ugui.git"/>
        <assembly-definition name="Game.Module.View.Ugui"/>
    </package>

    <!-- 业务定制库 -->
    <package name="com.gameframework.unity.module.asset.namesearcher"
             displayName="GameFramework.Module.Asset.NameSearcher"
             title="Goo资产名称检索器"
             description="提供基于Goo资产打包规则下的名称检索，对外提供基于名称进行资源访问的扩展操作的便捷访问接口">
        <git-repository url="https://github.com/yoseasoft/com.gameframework.unity.module.asset.namesearcher.git"/>
        <assembly-definition name="Game.Module.Asset.NameSearcher"/>
        <dependencies>
            <reference-package name="com.yoseasoft.gooasset"/>
            <reference-package name="com.novaframework.unity.litjson"/>
        </dependencies>
    </package>
</root>
